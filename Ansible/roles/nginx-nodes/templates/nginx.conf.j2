upstream flask {
        server 0.0.0.0:5000;
        }
server{
        listen 8080;
        server_name 0.0.0.0;
        charset utf-8;
        client_max_body_size 75M;
        location / {
                include /etc/nginx/uwsgi_params;
                uwsgi_pass flask;
                }
        location /static {
                alias /home/ubuntu/project/static;
                }
}
